<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tianyigps.xiepeng.activity.InstallingActivity">

    <include
        layout="@layout/layout_activity_installing_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_16"
        />

    <ListView
        android:id="@+id/lv_activity_installing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_weight="1"
        android:divider="@color/colorNull"
        android:dividerHeight="@dimen/dp_16"
        android:scrollbars="none"/>

    <Button
        android:id="@+id/btn_activity_installing_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/bg_flush"
        android:paddingLeft="@dimen/dp_72"
        android:paddingRight="@dimen/dp_72"
        android:text="@string/next_step"
        android:textColor="@color/colorWhite"/>
</LinearLayout>
