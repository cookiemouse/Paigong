<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_manager_fragment_content"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tianyigps.dispatch2.activity.ManagerFragmentContentActivity">

    <ImageView
        android:id="@+id/iv_activity_manager_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_content"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_activity_manager_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include
            layout="@layout/layout_manager_fragment_content_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/view_manager_red_dot"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:background="@color/colorNull"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"/>
</FrameLayout>
