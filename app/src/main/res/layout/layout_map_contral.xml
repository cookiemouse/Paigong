<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_24">

    <TextView
        android:id="@+id/tv_layout_map_control_satellite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_map_control"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:text="@string/satellite" />

    <TextView
        android:id="@+id/tv_layout_map_control_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_layout_map_control_satellite"
        android:layout_marginRight="@dimen/dp_1"
        android:layout_marginEnd="@dimen/dp_1"
        android:layout_toLeftOf="@+id/tv_layout_map_control_satellite"
        android:layout_toStartOf="@+id/tv_layout_map_control_satellite"
        android:background="@drawable/bg_map_control_select"
        android:text="@string/map" />

    <TextView
        android:id="@+id/tv_layout_map_control_flush_cycle"
        android:layout_width="@dimen/dp_56"
        android:layout_height="@dimen/dp_56"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#3385ff"
        android:textSize="@dimen/sp_16"
        android:paddingBottom="@dimen/dp_4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_72"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/bg_flush_warn"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_layout_map_control_flush"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_button_flush"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/flush"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_layout_map_control_warn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_button_flush"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingTop="@dimen/dp_8"
            android:text="报警记录"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_layout_map_control_locate"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_8"
        android:src="@drawable/ic_locate" />
</RelativeLayout>