<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/dp_8"
              android:paddingRight="@dimen/dp_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4">

        <RelativeLayout
            android:id="@+id/rl_layout_operate_install_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_layout_operate_install_car_no"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_car_no"/>

            <TextView
                android:id="@+id/tv_layout_operate_install_car_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_layout_operate_install_car_no"
                android:layout_toEndOf="@+id/iv_layout_operate_install_car_no"
                android:layout_toRightOf="@+id/iv_layout_operate_install_car_no"
                android:text="@string/car_no"/>

            <EditText
                android:id="@+id/et_layout_operate_install_car_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_layout_operate_install_car_no"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_toEndOf="@+id/iv_layout_operate_install_car_no"
                android:layout_toRightOf="@+id/iv_layout_operate_install_car_no"
                android:background="@null"
                android:ellipsize="end"
                android:hint="@string/enter_car_no"
                android:lines="1"
                android:maxWidth="@dimen/dp_240"
                android:singleLine="true"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_layout_operate_install_car_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_camera"/>

        <ImageView
            android:id="@+id/iv_layout_operate_install_car_pic_delete"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_cycle_delete"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_delete"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/iv_layout_operate_install_car_pic"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/colorBlueTheme"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tv_activity_operate_install_tip_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_44"
        android:text="@string/tip_carno"
        android:textColor="@color/colorOrange"
        android:visibility="gone"/>

    <!--=====================================================-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_layout_operate_install_frame_no"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_frame_no"/>

            <TextView
                android:id="@+id/tv_layout_operate_install_frame_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_layout_operate_install_frame_no"
                android:layout_toEndOf="@+id/iv_layout_operate_install_frame_no"
                android:layout_toRightOf="@+id/iv_layout_operate_install_frame_no"
                android:text="@string/frame_no"/>

            <TextView
                android:id="@+id/tv_layout_operate_install_frame_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_layout_operate_install_frame_no_title"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toEndOf="@+id/iv_layout_operate_install_frame_no"
                android:layout_toRightOf="@+id/iv_layout_operate_install_frame_no"
                android:lines="1"
                android:maxWidth="@dimen/dp_240"
                android:text="asdf"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_layout_operate_install_frame_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_camera"/>

        <ImageView
            android:id="@+id/iv_layout_operate_install_frame_pic_delete"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_cycle_delete"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_delete"
            android:visibility="visible"/>

        <View
            android:id="@+id/view_activity_operate_install"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/iv_layout_operate_install_frame_pic"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/colorBlueTheme"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_activity_operate_install_tip_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginStart="@dimen/dp_44"
        android:text="@string/tip_pic"
        android:textColor="@color/colorOrange"
        android:visibility="gone"/>

    <!--===============================-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_layout_operate_install_car_type"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_car_type"/>

        <TextView
            android:id="@+id/tv_layout_operate_install_car_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_layout_operate_install_car_type"
            android:layout_toEndOf="@+id/iv_layout_operate_install_car_type"
            android:layout_toRightOf="@+id/iv_layout_operate_install_car_type"
            android:text="@string/car_type"/>

        <EditText
            android:id="@+id/et_layout_operate_install_car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_layout_operate_install_car_type"
            android:layout_toEndOf="@+id/iv_layout_operate_install_car_type"
            android:layout_toRightOf="@+id/iv_layout_operate_install_car_type"
            android:background="@null"
            android:hint="@string/car_type"
            android:lines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_activity_operate_install_tip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_layout_operate_install_car_type"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:text="@string/tip_car_type"
            android:textColor="@color/colorOrange"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/tv_activity_operate_install_tip_2"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/colorBlueTheme"
            android:visibility="gone"/>
    </RelativeLayout>

    <com.tianyigps.dispatch2.customview.MyRecyclerView
        android:id="@+id/rv_layout_activity_operate_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.tianyigps.dispatch2.customview.MyRecyclerView>

</LinearLayout>