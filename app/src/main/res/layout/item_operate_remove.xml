<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/bg_item"
        android:elevation="@dimen/dp_4">

        <ImageView
            android:id="@+id/iv_item_operate_remove_car"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_car_no"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_item_operate_remove_car"
            android:layout_toRightOf="@+id/iv_item_operate_remove_car"
            android:text="沪X9527"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_frame_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_operate_remove_car"
            android:layout_toEndOf="@+id/iv_item_operate_remove_car"
            android:layout_toRightOf="@+id/iv_item_operate_remove_car"
            android:text="LSJW546461FCV89789"/>

        <ImageView
            android:id="@+id/iv_item_operate_remove_device_type"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_item_operate_remove_car"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_device_no"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_device_type_and_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_operate_remove_device_type"
            android:layout_toEndOf="@+id/iv_item_operate_remove_device_type"
            android:layout_toRightOf="@+id/iv_item_operate_remove_device_type"
            android:text="有线（微贷网201703201351）"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_device_t_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_operate_remove_device_type"
            android:layout_toEndOf="@+id/iv_item_operate_remove_device_type"
            android:layout_toRightOf="@+id/iv_item_operate_remove_device_type"
            android:text="32154983215647832"/>

        <ImageView
            android:id="@+id/iv_item_operate_remove_position"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_item_operate_remove_device_type"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_place"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_operate_remove_position"
            android:layout_toEndOf="@+id/iv_item_operate_remove_position"
            android:layout_toRightOf="@+id/iv_item_operate_remove_position"
            android:text="旧安装位置"/>

        <TextView
            android:id="@+id/tv_item_operate_remove_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_operate_remove_position"
            android:layout_toEndOf="@+id/iv_item_operate_remove_position"
            android:layout_toRightOf="@+id/iv_item_operate_remove_position"
            android:lines="1"
            android:maxWidth="@dimen/dp_240"
            android:text="驾驶舱仪器内"/>

        <ImageView
            android:id="@+id/iv_item_operate_remove_position_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_item_operate_remove_position_title"
            android:src="@drawable/ic_camera"/>

        <RelativeLayout
            android:id="@+id/rl_item_operate_remove_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_item_operate_remove_position"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv_item_operate_remove_install"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_connection"/>

            <TextView
                android:id="@+id/tv_item_operate_remove_install"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignTop="@+id/iv_item_operate_remove_install"
                android:layout_toEndOf="@+id/iv_item_operate_remove_install"
                android:layout_toRightOf="@+id/iv_item_operate_remove_install"
                android:gravity="center"
                android:text="旧接线图"/>

            <ImageView
                android:id="@+id/iv_item_operate_remove_install_pic"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_item_operate_remove_install"
                android:src="@drawable/ic_camera"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_item_operate_remove_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_item_operate_remove_install"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/colorBlueTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_operate_remove_data_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="到期日期"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_item_operate_remove_date"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="2018-02-23"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/colorBlueTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_operate_remove_worker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:text="安装人："
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_item_operate_remove_worker"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="杨某某"/>

                <TextView
                    android:id="@+id/tv_item_operate_remove_worker_phone"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="17900000001"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/colorBlueTheme"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_operate_remove_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ll_item_operate_remove_install"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_button_clickable"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:text="未拆除"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>
</FrameLayout>