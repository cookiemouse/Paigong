<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="车在地下车库，已正常上线"
            android:textSize="@dimen/sp_12" />

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="无任何问题，正常上线"
            android:textSize="@dimen/sp_12" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="维修换卡"
            android:textSize="@dimen/sp_12" />

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设备电源人为破坏，接线松动"
            android:textSize="@dimen/sp_12" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设备人为拆卸导致脱落"
            android:textSize="@dimen/sp_12" />

        <RadioButton
            android:id="@+id/rb_layout_repair_explain_unchangeable_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="其他"
            android:textSize="@dimen/sp_12" />
    </TableRow>

</TableLayout>