<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_8">

    <TextView
        android:id="@+id/tv_layout_dialog_sign_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="提示"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sp_20" />

    <ImageView
        android:id="@+id/iv_layout_dialog_sign_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_layout_dialog_sign_title"
        android:layout_marginTop="@dimen/dp_8"
        app:srcCompat="@color/colorGrayBlack" />

    <TextView
        android:id="@+id/tv_layout_dialog_sign_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_layout_dialog_sign_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        android:text="确认签到？(签到会核对定位地址)"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_layout_dialog_sign_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_32"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_layout_dialog_sign_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@color/colorTextSelect"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_32"
            android:paddingRight="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:text="确认"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_layout_dialog_sign_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@color/colorTextSelect"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_32"
            android:paddingRight="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:text="取消"
            android:textSize="@dimen/sp_20" />

    </LinearLayout>

</RelativeLayout>