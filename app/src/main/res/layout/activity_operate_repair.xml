<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_8"
    android:scrollbars="none"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_activity_operate_default_car"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_car_no"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_car_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/iv_activity_operate_default_car"
            android:layout_toRightOf="@+id/iv_activity_operate_default_car"
            />

        <TextView
            android:id="@+id/tv_activity_operate_default_frame_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_activity_operate_default_car"
            android:layout_toEndOf="@+id/iv_activity_operate_default_car"
            android:layout_toRightOf="@+id/iv_activity_operate_default_car"
            />

        <ImageView
            android:id="@+id/iv_activity_operate_default_locate"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_address"/>

        <ImageView
            android:id="@+id/iv_activity_operate_default_device_type"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_activity_operate_default_car"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_device_no"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_device_type_and_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_activity_operate_default_device_type"
            android:layout_toEndOf="@+id/iv_activity_operate_default_device_type"
            android:layout_toRightOf="@+id/iv_activity_operate_default_device_type"
            />

        <TextView
            android:id="@+id/tv_activity_operate_default_device_t_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_activity_operate_default_device_type"
            android:layout_toEndOf="@+id/iv_activity_operate_default_device_type"
            android:layout_toRightOf="@+id/iv_activity_operate_default_device_type"
            />

        <ImageView
            android:id="@+id/iv_activity_operate_default_position"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_activity_operate_default_device_type"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_place"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_position_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_activity_operate_default_position"
            android:layout_toEndOf="@+id/iv_activity_operate_default_position"
            android:layout_toRightOf="@+id/iv_activity_operate_default_position"
            android:text="@string/ole_install_position"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_activity_operate_default_position"
            android:layout_toEndOf="@+id/iv_activity_operate_default_position"
            android:layout_toRightOf="@+id/iv_activity_operate_default_position"
            android:lines="1"
            android:maxWidth="@dimen/dp_240"
            />

        <ImageView
            android:id="@+id/iv_activity_operate_default_position_pic"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_activity_operate_default_position_title"
            android:src="@drawable/ic_camera"/>

        <RelativeLayout
            android:id="@+id/rl_activity_operate_default_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_activity_operate_default_position"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv_activity_operate_default_install"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_connection"/>

            <TextView
                android:id="@+id/tv_activity_operate_default_install"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignTop="@+id/iv_activity_operate_default_install"
                android:layout_toEndOf="@+id/iv_activity_operate_default_install"
                android:layout_toRightOf="@+id/iv_activity_operate_default_install"
                android:gravity="center"
                android:text="@string/old_install_pic"/>

            <ImageView
                android:id="@+id/iv_activity_operate_default_install_pic"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_activity_operate_default_install"
                android:src="@drawable/ic_camera"/>
        </RelativeLayout>


        <View
            android:id="@+id/view_activity_operate_default_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/rl_activity_operate_default_install"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/colorBlueTheme"/>

        <LinearLayout
            android:id="@+id/ll_activity_operate_default_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_activity_operate_default_line_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_activity_operate_default_worker_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:text="@string/install_worker"/>

            <TextView
                android:id="@+id/tv_activity_operate_default_worker"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                />

            <TextView
                android:id="@+id/tv_activity_operate_default_worker_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                />
        </LinearLayout>

        <View
            android:id="@+id/view_activity_operate_default_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@id/ll_activity_operate_default_install"
            android:background="@color/colorBlueTheme"/>

        <TextView
            android:id="@+id/tv_activity_operate_fault_describe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_activity_operate_default_line_2"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/fault_describe"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_activity_operate_fault_describe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_activity_operate_fault_describe_title"
            android:padding="@dimen/dp_8"
            />

        <TextView
            android:id="@+id/tv_activity_operate_remove_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_activity_operate_fault_describe"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_button_clickable"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/repair_replace"
            android:textColor="@color/colorWhite"
            />

        <RelativeLayout
            android:id="@+id/rl_activity_operate_replace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_operate_remove_state"
            android:layout_marginTop="@dimen/dp_16"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_activity_operate_replace"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_device_no"/>

            <TextView
                android:id="@+id/tv_activity_operate_replace_device_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_activity_operate_replace"
                android:layout_toRightOf="@+id/iv_activity_operate_replace"
                android:text="新设备号"/>

            <EditText
                android:id="@+id/et_activity_operate_replace_device_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_activity_operate_replace"
                android:layout_marginEnd="@dimen/dp_80"
                android:layout_marginRight="@dimen/dp_80"
                android:layout_toEndOf="@+id/iv_activity_operate_replace"
                android:layout_toRightOf="@+id/iv_activity_operate_replace"
                android:background="@null"
                android:hint="请输入设备号（至少6位）"
                android:inputType="number"
                android:lines="1"
                android:maxWidth="@dimen/dp_240"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:id="@+id/iv_activity_operate_replace_locate"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_address"/>

            <ImageView
                android:id="@+id/iv_activity_operate_replace_scanner"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_toLeftOf="@+id/iv_activity_operate_replace_locate"
                android:layout_toStartOf="@+id/iv_activity_operate_replace_locate"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_scanner"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_below="@+id/iv_activity_operate_replace"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/colorBlueTheme"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_activity_operate_default_position_new"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/rl_activity_operate_replace"
            android:layout_marginTop="@dimen/dp_16"
            android:padding="@dimen/dp_8"
            android:src="@drawable/ic_place"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_position_title_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_activity_operate_default_position_new"
            android:layout_toEndOf="@+id/iv_activity_operate_default_position_new"
            android:layout_toRightOf="@+id/iv_activity_operate_default_position_new"
            android:text="@string/install_place"/>

        <EditText
            android:id="@+id/et_activity_operate_default_position_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_activity_operate_default_position_new"
            android:layout_marginEnd="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_toEndOf="@+id/iv_activity_operate_default_position_new"
            android:layout_toRightOf="@+id/iv_activity_operate_default_position_new"
            android:background="@null"
            android:hint="@string/enter_install_place"
            android:lines="1"
            android:maxWidth="@dimen/dp_240"
            android:textSize="@dimen/sp_14"/>

        <ImageView
            android:id="@+id/iv_activity_operate_default_position_pic_new"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_activity_operate_default_position_title_new"
            android:src="@drawable/ic_camera"/>

        <ImageView
            android:id="@+id/iv_activity_operate_default_position_pic_new_delete"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_activity_operate_default_position_title_new"
            android:layout_marginTop="@dimen/dp_14_n"
            android:background="@drawable/bg_cycle_delete"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_delete"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_activity_operate_default_line_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/iv_activity_operate_default_position_new"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/colorBlueTheme"/>

        <RelativeLayout
            android:id="@+id/rl_activity_operate_default_install_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_activity_operate_default_line_3"
            android:layout_marginTop="@dimen/dp_16">

            <ImageView
                android:id="@+id/iv_activity_operate_default_install_new"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="@dimen/dp_8"
                android:src="@drawable/ic_connection"/>

            <TextView
                android:id="@+id/tv_activity_operate_default_install_new"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:layout_alignTop="@+id/iv_activity_operate_default_install_new"
                android:layout_toEndOf="@+id/iv_activity_operate_default_install_new"
                android:layout_toRightOf="@+id/iv_activity_operate_default_install_new"
                android:gravity="center"
                android:text="@string/install_pic"/>

            <ImageView
                android:id="@+id/iv_activity_operate_default_install_pic_new"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_activity_operate_default_install_new"
                android:src="@drawable/ic_camera"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_activity_operate_default_install_pic_new_delete"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/rl_activity_operate_default_install_new"
            android:layout_marginTop="@dimen/dp_14_n"
            android:background="@drawable/bg_cycle_delete"
            android:padding="@dimen/dp_4"
            android:src="@drawable/ic_delete"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_activity_operate_default_line_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_below="@+id/rl_activity_operate_default_install_new"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/colorBlueTheme"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_install_explain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_activity_operate_default_line_4"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/explain"/>

        <EditText
            android:id="@+id/et_activity_operate_default_install_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_operate_default_install_explain_title"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_edit"
            android:gravity="start|top"
            android:hint="@string/enter_explain"
            android:maxLength="200"
            android:minHeight="@dimen/dp_96"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_activity_operate_default_install_explain_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_activity_operate_default_install_explain"
            android:layout_marginTop="@dimen/dp_4"
            android:text="0/200"/>

        <Button
            android:id="@+id/btn_activity_operate_repair_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_activity_operate_default_install_explain_count"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_button_flush"
            android:paddingLeft="@dimen/dp_80"
            android:paddingRight="@dimen/dp_80"
            android:text="@string/save"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
</ScrollView>