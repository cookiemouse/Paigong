<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_pend_details"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/dp_4"
        android:padding="@dimen/dp_4"
        android:src="@drawable/ic_order_details_info_add"/>

    <TextView
        android:id="@+id/tv_item_pend_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_pend_details"
        android:layout_toEndOf="@+id/iv_item_pend_details"
        android:layout_toRightOf="@+id/iv_item_pend_details"
        android:text="title"
        android:textColor="@color/colorBlueTheme"/>

    <TextView
        android:id="@+id/tv_item_pend_details_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_pend_details_title"
        android:layout_alignStart="@+id/tv_item_pend_details_title"
        android:layout_below="@+id/tv_item_pend_details_title"
        android:text="content"/>

</RelativeLayout>