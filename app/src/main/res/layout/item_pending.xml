<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_item">

    <TextView
        android:id="@+id/tv_item_pending_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:lines="1"
        android:text="@string/app_name"
        android:textColor="@color/colorGrayBlack"
        android:textSize="@dimen/sp_20"/>

    <LinearLayout
        android:id="@+id/ll_item_pending_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_pending_name"
        android:layout_alignStart="@+id/tv_item_pending_name"
        android:layout_below="@+id/tv_item_pending_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_pending_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orderNo"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorGray"/>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_12"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:background="@color/colorGray"/>

        <TextView
            android:id="@+id/tv_item_pending_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorGray"/>

        <TextView
            android:id="@+id/tv_item_pending_modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:textColor="@color/colorGray"/>
    </LinearLayout>

    <TableLayout
        android:id="@+id/tl_item_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_item_pending_order"
        android:paddingLeft="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tr_item_pending_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_order"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_order_item"/>

            <TextView
                android:id="@+id/tv_item_pending_order"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="order_info"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_item_pending_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_address"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_4"
                android:src="@drawable/ic_address_item"/>

            <TextView
                android:id="@+id/tv_item_pending_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="address"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_item_pending_refuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_refuse"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_refuse_item"/>

            <TextView
                android:id="@+id/tv_item_pending_refuse"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="改约时间不通过"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_item_pending_engineer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_engineer"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_engineer_item"/>

            <TextView
                android:id="@+id/tv_item_pending_engineer"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10010  安装工程师"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_item_pending_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_modify"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_modify_item"/>

            <TextView
                android:id="@+id/tv_item_pending_modify"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="改约"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_item_pending_part_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_item_pending_part_finish"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_part_item"/>

            <TextView
                android:id="@+id/tv_item_pending_part_finish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="部分完成:  ..."/>
        </TableRow>
    </TableLayout>

    <View
        android:id="@+id/line_item_pending_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tl_item_pending"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/color_cut_line_gray"/>

    <LinearLayout
        android:id="@+id/ll_item_pending_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/line_item_pending_1"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_pending_phone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_ellipse_gay"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="6"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/tv_item_pending_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_ellipse_gay"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="6"
            android:text="查看路线"/>

        <TextView
            android:id="@+id/tv_item_pending_pend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_ellipse"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxEms="6"
            android:text="快速派单"
            android:textColor="@color/colorBlueTheme"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_pending_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:lines="1"
        android:text="@string/pending"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/sp_16"/>

</RelativeLayout>